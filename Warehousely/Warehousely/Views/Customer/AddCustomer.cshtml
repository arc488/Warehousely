@model AddCustomerViewModel

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="p-3 mb-2 bg-success text-white">@ViewBag.Message</div>
}
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Customer" asp-action="AddCustomer" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4"><span asp-validation-for="Name" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Name" />
        </div>
    </div>

    <div class="col-sm-10">
        <button class="btn btn-primary" type="submit" value="Submit">Submit</button>
    </div>
</form>
