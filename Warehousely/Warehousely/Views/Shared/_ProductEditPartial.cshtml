@model ProductEditViewModel

<div class="row">
    <form asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.AntiForgeryToken()
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">
                        <label asp-for="Id" class="control-label"></label>
                    </th>
                    <td>
                        <input readonly asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">
                        <label asp-for="Name" class="control-label"></label>
                    </th>
                    <td>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">
                        <label asp-for="Count" class="control-label"></label>
                    </th>
                    <td>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">
                        <label asp-for="SizeId" class="control-label"></label>
                    </th>
                    <td>
                        <select asp-for="SizeId" class="form-control">
                            @foreach (var SizeId in Model.AllSizes)
                            {
                                if (SizeId.Id == Model.SizeId)
                                {
                                    <option value="@SizeId.Id" selected>@SizeId.Name</option>

                                }
                                else
                                {
                                    <option value="@SizeId.Id">@SizeId.Name</option>

                                }
                            }
                        </select>
                        <span asp-validation-for="SizeId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">
                        <label asp-for="Price" class="control-label"></label>
                    </th>
                    <td>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">
                        <label asp-for="ImageContent" class="control-label"></label>
                    </th>
                    <td>
                        <input type="file" name="file" asp-for="ImageContent" class="form-control" />
                        <span asp-validation-for="ImageContent" class="text-danger"></span>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </form>
    </div>
