@model CustumerViewModel

<input readonly hidden asp-for="AddressId" class="form-control" />

<div class="col-md-4 p-2 border">
    <div class="form-group">
        <label asp-for="Address1"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <i class="input-group-text fa fa-address-book"></i>
            </div>
            <input asp-for="Address1" class="form-control" placeholder="Street address" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address2"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <i class="input-group-text fa fa-address-book"></i>
            </div>
            <input asp-for="Address2" class="form-control" placeholder="" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <i class="input-group-text fa fa-address-book"></i>
            </div>
            <input asp-for="City" class="form-control" placeholder="City" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="State"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <i class="input-group-text fa fa-address-book"></i>
            </div>
            <input asp-for="State" class="form-control" placeholder="State" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Zip"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <i class="input-group-text fa fa-address-book"></i>
            </div>
            <input asp-for="Zip" class="form-control" placeholder="Zipcode" />
        </div>
    </div>
</div>
