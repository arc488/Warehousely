<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Warehousely</title>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css">

    <script src="~/lib/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script>
    <script src="https://use.fontawesome.com/cd0f3bab68.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/new_layout.css" />

</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Warehousely</h3>
                <strong>W</strong>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <partial name="_LoginPartial" />
                    <a asp-controller="Home" asp-action="Index" data-toggle="collapse" aria-expanded="false">
                        <i class="fa fa-home"></i>
                        Home
                    </a>
                </li>
                <li>
                    <a href="#customerSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-users"></i>
                        Customers
                    </a>
                    <ul class="collapse list-unstyled" id="customerSubmenu">
                        <li>
                            <a asp-controller="Customer" asp-action="Add">Add</a>
                        </li>
                        <li>
                            <a asp-controller="Customer" asp-action="List">List</a>
                        </li>
                    </ul>
                    <a href="#orderSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-copy"></i>
                        Orders
                    </a>
                    <ul class="collapse list-unstyled" id="orderSubmenu">
                        <li>
                            <a asp-controller="Order" asp-action="List">List</a>
                        </li>
                        <li>
                            <a asp-controller="Order" asp-action="Add">Add</a>
                        </li>
                    </ul>
                </li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-primary">
                        <i class="navbar-toggler-icon"></i>
                    </button>
                </div>

            </nav>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        function ValidNumeric() {
            var charCode = (event.which) ? event.which : event.keyCode;
            if (charCode >= 48 && charCode <= 57) { return true; }
            else { return false; }
        }
    </script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>

    <script>
        $(document).ready(function () {

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

        });
    </script>

    <script type="text/javascript">
        function ChangeColor(tableRow, highLight) {
            if (highLight) {
                tableRow.style.backgroundColor = '#E0FFFF';
            }
            else {
                tableRow.style.backgroundColor = 'white';
            }
        }

        function DoNav(pathname) {
            var origin = window.location.origin;
            var theUrl = origin + pathname;
            document.location.href = theUrl;
        }
    </script>

    @RenderSection("Scripts", required: false)

</body>

</html>