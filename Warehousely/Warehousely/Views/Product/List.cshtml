
@model IEnumerable<Product>

<h1>List</h1>



<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Product name</th>
        <th scope="col">Price</th>
        <th scope="col">Size</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {

 
    <tr>
        <th scope="row">@product.Id</th>
        <td>@product.Name</td>
        <td>@product.Price</td>
        <td>@product.Size</td>
    </tr>
    }
    </tbody>
</table>