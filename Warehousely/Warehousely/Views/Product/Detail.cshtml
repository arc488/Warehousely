@model ProductDetailViewModel

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="data:image;base64,@Model.Image" class="w-100" />

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <partial name="_ProductDetailPartial"></partial>
                </div>
            </div>
        </div>
            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>

