@model ProductAddViewModel

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="p-3 mb-2 bg-success text-white">@ViewBag.Message</div>
}
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4"><span asp-validation-for="Name" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Name" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Count" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4"><span asp-validation-for="Count" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Count" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4"><span asp-validation-for="Price" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input asp-for="Price" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Size" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4"><span asp-validation-for="Size" class="text-danger"></span></div>
        <div class="col-sm-10">
            <select asp-for="Size" class="form-control">
                @foreach (var size in Model.AllSizes)
                {
                    <option value="@size.Id">@size.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4"><span asp-validation-for="Image" class="text-danger"></span></div>
        <div class="col-sm-10">
            <input type="file" name="file" />
        </div>
    </div>

    <div class="col-sm-10">
        <button class="btn btn-primary" type="submit" value="Submit">Submit</button>
    </div>
</form>
